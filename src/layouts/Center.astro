---
import Layout from './Layout.astro';

interface Props {
  title: string
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main class="flex flex-col justify-center items-center maxCenter">
    <h1 class="underline decoration-sky-500 underline-offset-8 pb-8">{title}</h1>
    <slot/>
  </main>
</Layout>

<style>
  .maxCenter :global(> p, ul, h3){
    @apply max-w-[50%];
  }
</style>