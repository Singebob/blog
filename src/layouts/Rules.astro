---
import Layout from './Layout.astro';

interface Props {
	pageTitle: string;
  title: string;
  type: "Interaction" | "Code"
}

const { pageTitle, type, title } = Astro.props;
---

<Layout title={pageTitle}>
  <section class="rules">
    <div class="title">
      <h1>{title}</h1>
      <p class="tag">{type}</p>
    </div>
    <slot />
  </section>
</Layout>

<style>
  section {
    @apply m-8;
    @apply flex;
    @apply flex-col;
    @apply gap-8;
  }
  .title {
    @apply flex;
    @apply flex-col;
    @apply gap-2;
  }

  .tag {
    @apply w-min;
    @apply h-min;
    @apply bg-blue-100;
    @apply text-blue-800;
    @apply text-xs;
    @apply font-medium;
    @apply me-2;
    @apply px-2.5;
    @apply py-0.5;
    @apply rounded;
    @apply border;
    @apply border-blue-400;
  }

  .rules :global(h2) {
    @apply m-0;
    @apply text-4xl;
    @apply font-bold;
    @apply text-blue-500;
  }

  .rules :global(h5) {
    @apply m-0;
    @apply text-xl;
    @apply font-bold;
    @apply text-blue-400;
  }

  .rules :global(ul > li) {
    @apply mb-4;
  }
</style>