---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import {getCollection, render} from 'astro:content';

export async function getStaticPaths() {
  const katas = await getCollection('katas');
  return katas.map(kata => ({
    params: { slug: kata.id },
    props: { kata },
  }));
}

const { kata } = Astro.props;
const { Content } = await render(kata);
---

<Layout title={kata.data.title}>
  <main class="flex flex-col gap-4 w-6/12 m-auto">
    <h1>{kata.data.title}</h1>
    <section class="flex flex-col gap-2">
      <Content />
    </section>
  </main>
</Layout>

<style>
  main > section:not(:last-child) {
    @apply pb-4;
    @apply border-b-2;
  }

  main {
    :global(h2) {
      @apply text-2xl font-bold mt-8 mb-4 pb-2 border-b-2 border-gray-300;
    }

    :global(h3) {
      @apply text-xl font-semibold mt-6 mb-3 text-indigo-700;
    }

    :global(p) {
      @apply my-3 leading-relaxed;
    }

    :global(ul) {
      @apply my-4 pl-6;
    }

    :global(li) {
      @apply mb-2;
    }

    :global(img) {
      @apply my-4 rounded-md shadow-md;
    }
  }
</style>
